 
<h1><%= @album.album_name %></h1>

<p><%= link_to 'Upload new photo', new_album_image_path(@album) %></p>

    

<div class="container">
	<%= link_to 'Edit', edit_album_path(@album) %> |
	<%= link_to 'Back', albums_path %>
	<ul class="row">
		<% @album.images.each do |photo| %>
		<%= link_to [@album, photo] do %>
		<li class="col-lg-2 col-md-2 col-sm-3 col-xs-4 my_image">

			<%= image_tag photo.avatar.url(:small) %>
			<div class="caption">
				<h3><%= photo.tag_line %></h3>

			</div>
		</li>

		<% end %>
		<% end %>

	</ul>
</div>


